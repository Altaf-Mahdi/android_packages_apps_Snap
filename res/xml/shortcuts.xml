<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
  <shortcut
    android:shortcutId="selfie"
    android:enabled="true"
    android:icon="@drawable/ic_selfie"
    android:shortcutShortLabel="@string/shortcut_selfie_short_label"
    android:shortcutLongLabel="@string/shortcut_selfie_long_label">
    <intent
      android:action="android.media.action.STILL_IMAGE_CAMERA"
      android:targetPackage="org.cyanogenmod.snap"
      android:targetClass="com.android.camera.CameraActivity">
      <extra android:name="android.intent.extras.CAMERA_FACING"
      android:value="1" />
    </intent>
  </shortcut>
  <shortcut
    android:shortcutId="video"
    android:enabled="true"
    android:icon="@drawable/ic_video"
    android:shortcutShortLabel="@string/shortcut_video_short_label"
    android:shortcutLongLabel="@string/shortcut_video_long_label">
    <intent
      android:action="android.media.action.VIDEO_CAMERA"
      android:targetPackage="org.cyanogenmod.snap"
      android:targetClass="com.android.camera.CameraActivity">
    </intent>
  </shortcut>
</shortcuts>
